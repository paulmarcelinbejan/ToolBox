<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <developers>
        <developer>
            <name>Paul Marcelin Bejan</name>
            <email>paulmarcelinbejan.developer@gmail.com</email>
        </developer>
    </developers>

    <name>architecture</name>
    <description>Paul Marcelin Bejan Architecture</description>

    <groupId>com.paulmarcelinbejan</groupId>
    <artifactId>architecture</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>

    <properties>
		<!-- JAVA -->
        <java.version>17</java.version>
        <!-- MAVEN -->
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <!-- SPRING -->
        <spring-boot.version>3.0.4</spring-boot.version>
        <!-- LOGGERS -->
        <!-- <tinylog.version>2.6.0</tinylog.version> -->
        <log4j-slf4j-impl.version>2.20.0</log4j-slf4j-impl.version>
        <!-- LOMBOK -->
        <lombok.version>1.18.24</lombok.version>
        <!-- JACKSON -->
        <jackson.version>2.14.1</jackson.version>
        <!-- APACHE -->
        <apache-commons-lang3.version>3.12.0</apache-commons-lang3.version>
        <apache-commons-collections.version>3.2.2</apache-commons-collections.version>
    </properties>

    <modules>
		<module>architecture-annotations</module>
		<module>architecture-base</module>
        <module>architecture-configuration</module>
        <module>architecture-constants</module>
        <module>architecture-test</module>
        <module>architecture-utils-io</module>
        <module>architecture-utils-math</module>
        <module>architecture-utils-time</module>
    </modules>

    <dependencyManagement>
        <dependencies>

            <!-- Spring Boot dependencies -->
	        <dependency>
	            <groupId>org.springframework.boot</groupId>
	            <artifactId>spring-boot-starter-test</artifactId>
	            <version>${spring-boot.version}</version>
	        </dependency>
        
            <!-- Lombok dependencies -->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>

            <!-- Architecture dependencies -->
            <dependency>
                <groupId>com.paulmarcelinbejan</groupId>
                <artifactId>architecture-annotations</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.paulmarcelinbejan</groupId>
                <artifactId>architecture-base</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.paulmarcelinbejan</groupId>
                <artifactId>architecture-configuration</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.paulmarcelinbejan</groupId>
                <artifactId>architecture-constants</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.paulmarcelinbejan</groupId>
                <artifactId>architecture-test</artifactId>
                <version>${project.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>com.paulmarcelinbejan</groupId>
                <artifactId>architecture-utils-io</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.paulmarcelinbejan</groupId>
                <artifactId>architecture-utils-math</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.paulmarcelinbejan</groupId>
                <artifactId>architecture-utils-time</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- Apache -->
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${apache-commons-lang3.version}</version>
            </dependency>
            <dependency>
			    <groupId>commons-collections</groupId>
			    <artifactId>commons-collections</artifactId>
			    <version>${apache-commons-collections.version}</version>
			</dependency>

            <!-- Jackson -->
            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-core</artifactId>
                <version>${jackson.version}</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-databind</artifactId>
                <version>${jackson.version}</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-annotations</artifactId>
                <version>${jackson.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <dependencies>

        <!-- Spring Boot dependencies -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
            <version>${spring-boot.version}</version>
            <exclusions>
				<exclusion>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-starter-logging</artifactId>
				</exclusion>
			</exclusions>
        </dependency>
	    <dependency>
	        <groupId>org.springframework.boot</groupId>
	        <artifactId>spring-boot-starter-test</artifactId>
	        <scope>test</scope>
	    </dependency>
		
		<!-- LOGGER -->
		<!-- 
		<dependency>
		    <groupId>org.tinylog</groupId>
		    <artifactId>tinylog-api</artifactId>
		    <version>${tinylog.version}</version>
		</dependency>
		<dependency>
		    <groupId>org.tinylog</groupId>
		    <artifactId>tinylog-impl</artifactId>
		    <version>${tinylog.version}</version>
		</dependency>
		-->
		<dependency>
	    	<groupId>org.apache.logging.log4j</groupId>
	    	<artifactId>log4j-slf4j-impl</artifactId>
	    	<version>${log4j-slf4j-impl.version}</version>
	    </dependency>
		
        <!-- Lombok dependencies -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
